{
    // markdown
    "[markdown]": {
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint"
    },
    "markdownlint.ignore": [
        ".clang-format",
        "**/.clang-format"
    ],
    // cspell
    "cSpell.words": [
        "Anson",
        "auths",
        "didi",
        "extendee",
        "gnomock",
        "gomodule",
        "gorm",
        "HGET",
        "HGETALL",
        "HMSET",
        "HSET",
        "HVALS",
        "Idxs",
        "jinzhu",
        "MSET",
        "myhash",
        "mykey",
        "myset",
        "orlangure",
        "protoc",
        "protoimpl",
        "redigo",
        "SADD",
        "SETNX",
        "SMEMBERS",
        "stretchr",
        "takeup",
        "TOMO",
        "urfave"
    ],
    "cSpell.enableFiletypes": [
        "!jsonc",
        "!markdown"
    ],
    // format on save
    "editor.formatOnSave": false,
    "editor.inlayHints.enabled": "off",
    // 在文件末尾添加一个空行
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    // go
    "go.toolsEnvVars": {
        "GO111MODULE": "on",
        "GOPROXY": "goproxy.cn,direct",
        "GOSUMDB": "off",
    },
    "go.testFlags": [
        "-v",
        "-count=1",
        "-timeout=60s"
    ],
    // proto
    "[proto3]": {
        "editor.defaultFormatter": "zxh404.vscode-proto3"
    },
}
